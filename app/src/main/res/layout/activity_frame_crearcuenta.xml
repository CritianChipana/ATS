<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtCorreo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".crear_cuenta">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_azul" />

        <ProgressBar
            android:id="@+id/progressBar_registro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/titulo_registro"
            android:textAlignment="center"
            android:textColor="@color/Azul_marino"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="25dp"
            android:text="@string/Nombres"
            android:textColor="@color/Azul_marino" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="@color/black"
            android:hint="@string/Maria"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/Apellidos"
            android:textColor="@color/Azul_marino"
            />

        <EditText
            android:id="@+id/txtApellido"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="@color/black"
            android:hint="@string/Perez"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/Email"
            android:textColor="@color/Azul_marino" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="@color/black"
            android:hint="@string/gmail"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/Contrasena"
            android:textColor="@color/Azul_marino" />

        <EditText
            android:id="@+id/txtContrasena1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="@color/black"
            android:inputType="textPassword"
            android:hint="@string/Cont"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/Conf_contraseÃ±a"
            android:textColor="@color/Azul_marino" />

        <EditText
            android:id="@+id/txtContrasena2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/black"
            android:inputType="textPassword"
            android:hint="@string/Cont"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnSiguiente"
            android:onClick="register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/border_radious"
            android:backgroundTint="@color/Azul_marino"
            android:paddingVertical="15dp"
            android:text="@string/btn_registrate"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_volver_intentar"
            app:layout_constraintVertical_bias="0.229" />


</LinearLayout>